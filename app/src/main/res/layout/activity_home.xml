<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etProdukt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Produkt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etMenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Menge"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etProdukt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etNotiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Notiz"
        app:layout_constraintTop_toBottomOf="@+id/etMenge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnHinzufuegen"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="HinzufÃ¼gen"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etNotiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnHinzufuegen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
